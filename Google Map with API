<!DOCTYPE html>
<HTML>
<head>
<meta charset='utf-8'/>
<meta content='width=device-width,minimum-scale=1' name='viewport'/>
<style media="all" type="text/css">
#qfront{width:99%;max-width:100%;border:1px solid #dedede;margin-bottom:7px;padding:5px 0.5%;border-radius:4px;}
#map-canvas{height:400px;width:100%;}
</style>
<!--Jangan lupa kasih APInya dan tambahkan untuk menampilkan: "&sensor=false&libraries=places" lokasi/library setelah value API-nya-->
<script src="https://maps.googleapis.com/maps/api/js?key={GOOGLEMP-API-KEY}&sensor=false&libraries=places" type="text/javascript"></script>
<script>
function initMap() {
//PASANG LATLONG DEFAULT DULU, GAN
  var myLatLng = {lat:-7.606753320336545, lng: 110.20392769580076}; // INI LatLng-nya borobudur jateng, gan hehe ..
  var map = new google.maps.Map(document.getElementById('map-canvas'), {
    zoom:12,
	mapTypeId: 'roadmap',
    center: myLatLng
  });
// SEARCH BOX DISINI
   var searchBox = new google.maps.places.SearchBox(document.getElementById('qfront'));
   //SKRIP dibawah ini dinonaktifkan karena kalo agan pengen dicustom sendiri seperti contoh yang ane kasih ini:<br>
   //map.controls[google.maps.ControlPosition.TOP_CENTER].push(document.getElementById('qfront'));
   google.maps.event.addListener(searchBox, 'places_changed', function() {
     searchBox.set('map-canvas', null);
     var places = searchBox.getPlaces();
     var bounds = new google.maps.LatLngBounds();
     var i, place;
     for (i = 0; place = places[i]; i++) {
       (function(place) {
         var marker = new google.maps.Marker({
           position: place.geometry.location,
           map: map,
           draggable:true,
           animation: google.maps.Animation.DROP,
           title:'Hallo! Ini marker loh...'
         });
         marker.bindTo('map-canvas', searchBox, 'map-canvas');
         google.maps.event.addListener(marker, 'map_changed', function() {
           if (!this.getMap()) {
             this.unbindAll();
           }
         });
         bounds.extend(place.geometry.location);
       }(place));
     }
     map.fitBounds(bounds);
     searchBox.set('map-canvas', map);
     map.setZoom(Math.min(map.getZoom(),12));
	});

//MENAMPILKAN MARKER PADA TARGET
  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
	// BIAR BISA NGEDRAG HARUS DIENABLE SPT BERIKUT INI:
	draggable:true,
    animation: google.maps.Animation.DROP,
    title:'Hallo! Ini marker loh...'
  });
  //LATLNG TAMPIL OTOMATIS PADA SAAT MOUSE MARKER DIJATUHIN DIATAS MAP
  google.maps.event.addListener(marker,'mouseup',function(event) {
  	//ANIMASI DIKIT PADA MARKER = BOUNCE (lompat-lompat)
	marker.setAnimation(google.maps.Animation.BOUNCE);
	//STOP ANIMASI DIKIT PADA MARKER, jangan kelamaan wkwkwkwk... misalnya kasih 1400 buat lompat 2 kali lah heheh...
    setTimeout(function(){ marker.setAnimation(null); }, 1400);
	document.getElementById('qfront').value = event.latLng.lat() + ', ' + event.latLng.lng()
	})
}
//PANGGIL SEMUA SCRIPT DAN JALANKAN OTOMATIS PADA SAAT PAGE DI LOAD
google.maps.event.addDomListener(window, 'load', initMap);
</script>
</head>
<body>
<input id="qfront" name="qfront" placeholder="Cari Lokasi ..." type="text"/>
<div id="map-canvas"></div>
</body>
</HTML>
